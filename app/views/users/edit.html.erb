<h1>マイページの編集</h1>
<%= link_to 'パスワード変更はコチラ', edit_user_registration_path %>

<h2>ユーザー情報の変更</h2>
<%= form_with(model: @user, local: true) do |form| %>
<%#= form_with model :@user resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%# <%= render "devise/shared/error_messages", resource: resource %> %>

  <div class="field">
    <%= form.label :email %><br />
    <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

    <div class="field"> 
    <%= form.label :image %><br />
    <%= form.file_field :image %>
  </div>  

    <div class="field">
    <%= form.label :nickname %><br />
    <%= form.text_field :nickname%>
  </div>

    <div class="field">
    <%= form.label :twitter %><br />
    <%= form.text_field :twitter %>
  </div>

    <div class="field">
    <%= form.label :instagram %><br />
    <%= form.text_field :instagram %>
  </div>

    <div class="field">
    <%= form.label :facebook %><br />
    <%= form.text_field :facebook %>
  </div>

  <div class="actions">
    <%= form.submit "Update" %>
  </div>
<% end %>


